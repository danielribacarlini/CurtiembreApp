@model IEnumerable<Entities.SubPartida>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista Subpartidas</h2>
<h3>Partida: @ViewData["PartidaID"]</h3>
<hr />
@if (ViewData["CantSinClasificar"] != null)
{
    <p>
    <a asp-action="Create" asp-route-id="@ViewData["PartidaID"]">Create New <span class="badge badge-light">@ViewData["CantSinClasificar"]</span></a>
    </p>
}

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CantCueros)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Calidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Eficiencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Partida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CantCueros)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eficiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partida.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
