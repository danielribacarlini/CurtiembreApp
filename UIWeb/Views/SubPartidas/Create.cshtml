@model Entities.SubPartida
@using Entities;
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SubPartida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartidaID" class="control-label"></label>
                <input asp-for="PartidaID" value="@ViewData["PartidaID"]" />
            </div>
            <div class="form-group">
                <label asp-for="PedidoID" class="control-label"></label>
                <select asp-for="PedidoID" class="form-control"  asp-items="ViewBag.PedidoID">
                    <option selected="selected" value=""> </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CantCueros" class="control-label"></label>
                <input asp-for="CantCueros" class="form-control" />
                <span asp-validation-for="CantCueros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calidad" class="control-label"></label>
                <select asp-for="Calidad" asp-items="Html.GetEnumSelectList<Calidad>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Calidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Eficiencia" class="control-label"></label>
                <input asp-for="Eficiencia" class="form-control" />
                <span asp-validation-for="Eficiencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

