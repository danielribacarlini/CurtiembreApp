@model Entities.SubPartida
@using Entities;
@{
    ViewData["Title"] = "Create";
}

<h2>Agregar nueva Sub-Partida</h2>

<h3>Partida:  @ViewData["PartidaID"]</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="PartidaID" type="hidden" value="@ViewData["PartidaID"]"/>
            <div class="form-group">
                <label asp-for="PedidoID" class="control-label"></label>
                <select asp-for="PedidoID" class="form-control"  asp-items="ViewBag.PedidoID">
                    <option selected="selected" value=""> </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CantCueros" class="control-label"></label>
                <input asp-for="CantCueros" class="form-control" />
                <span asp-validation-for="CantCueros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calidad" class="control-label"></label>
                <select asp-for="Calidad" class="form-control" asp-items="Html.GetEnumSelectList<Calidad>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Calidad" class="text-danger"></span>
            </div>
